{
  "name": "poser",
  "scripts": {
    "heroku-prebuild": "npm i -g heroku && pnpm i -r --store=node_modules/.pnpm-store",
    "start": "pnpm -r start",
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean"
  },
  "cacheDirectories": [
    "/app/.pnpm-store",
    "node_modules/.pnpm"
  ],
  "dependencies": {
    "pnpm": "^6.2.1"
  }
}
